{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://angle-rfp.dev/schemas/v1/extracted-rfp-data-v1.schema.json",
  "title": "ExtractedRFPDataV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "analysisId",
    "extractionDate",
    "clientName",
    "projectName",
    "projectDescription",
    "scopeOfWork",
    "evaluationCriteria",
    "requiredDeliverables",
    "importantDates",
    "submissionRequirements",
    "redFlags",
    "missingInformation",
    "confidenceScores",
    "completenessScore",
    "warnings",
    "evidence"
  ],
  "properties": {
    "schemaVersion": { "type": "string", "const": "1.0.0" },
    "analysisId": { "type": "string", "format": "uuid" },
    "extractionDate": { "type": "string", "format": "date-time" },
    "clientName": { "type": "string", "minLength": 1 },
    "clientNameArabic": { "type": ["string", "null"] },
    "projectName": { "type": "string", "minLength": 1 },
    "projectNameOriginal": { "type": ["string", "null"] },
    "projectDescription": { "type": "string" },
    "scopeOfWork": { "type": "string", "minLength": 1 },
    "evaluationCriteria": { "type": "string", "minLength": 1 },
    "requiredDeliverables": { "type": "array", "items": { "type": "string" } },
    "importantDates": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "date", "type", "isCritical"],
        "properties": {
          "title": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "type": { "type": "string" },
          "isCritical": { "type": "boolean" }
        }
      }
    },
    "submissionRequirements": {
      "type": "object",
      "additionalProperties": false,
      "required": ["method", "format", "otherRequirements"],
      "properties": {
        "method": { "type": "string" },
        "email": { "type": ["string", "null"] },
        "physicalAddress": { "type": ["string", "null"] },
        "format": { "type": "string" },
        "copies": { "type": ["integer", "null"], "minimum": 0 },
        "otherRequirements": { "type": "array", "items": { "type": "string" } }
      }
    },
    "redFlags": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "severity", "title", "description", "sourceText", "recommendation"],
        "properties": {
          "type": { "type": "string", "enum": ["contractual", "feasibility", "process"] },
          "severity": { "type": "string", "enum": ["HIGH", "MEDIUM", "LOW"] },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "sourceText": { "type": "string" },
          "recommendation": { "type": "string" }
        }
      }
    },
    "missingInformation": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["field", "suggestedQuestion"],
        "properties": {
          "field": { "type": "string" },
          "suggestedQuestion": { "type": "string" }
        }
      }
    },
    "confidenceScores": {
      "type": "object",
      "required": ["overall"],
      "additionalProperties": { "type": "number", "minimum": 0, "maximum": 1 },
      "properties": {
        "overall": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "completenessScore": { "type": "number", "minimum": 0, "maximum": 1 },
    "warnings": { "type": "array", "items": { "type": "string" } },
    "conflicts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["field", "candidates", "resolution"],
        "properties": {
          "field": { "type": "string" },
          "candidates": { "type": "array", "items": { "type": "string" } },
          "resolution": { "type": "string" }
        }
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["field", "page", "excerpt"],
        "properties": {
          "field": { "type": "string" },
          "page": { "type": "integer", "minimum": 1 },
          "excerpt": { "type": "string" }
        }
      }
    }
  }
}
