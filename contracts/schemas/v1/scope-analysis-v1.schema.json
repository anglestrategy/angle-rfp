{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://angle-rfp.dev/schemas/v1/scope-analysis-v1.schema.json",
  "title": "ScopeAnalysisV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "analysisId",
    "taxonomyVersion",
    "scopeItems",
    "unclassifiedItems",
    "matches",
    "agencyServicePercentage",
    "outsourcingPercentage",
    "outputQuantities",
    "outputTypes",
    "warnings"
  ],
  "properties": {
    "schemaVersion": { "type": "string", "const": "1.0.0" },
    "analysisId": { "type": "string", "format": "uuid" },
    "taxonomyVersion": { "type": "string", "minLength": 1 },
    "scopeItems": { "type": "array", "items": { "type": "string" } },
    "unclassifiedItems": { "type": "array", "items": { "type": "string" } },
    "matches": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["scopeItem", "service", "class", "confidence", "classificationSource"],
        "properties": {
          "scopeItem": { "type": "string" },
          "service": { "type": "string" },
          "class": { "type": "string", "enum": ["full", "partial", "none", "uncertain"] },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "classificationSource": { "type": "string", "enum": ["semantic", "token", "rule"] }
        }
      }
    },
    "agencyServicePercentage": { "type": "number", "minimum": 0, "maximum": 1 },
    "outsourcingPercentage": { "type": "number", "minimum": 0, "maximum": 1 },
    "outputQuantities": {
      "type": "object",
      "additionalProperties": false,
      "required": ["videoProduction", "motionGraphics", "visualDesign", "contentOnly"],
      "properties": {
        "videoProduction": { "type": ["integer", "null"], "minimum": 0 },
        "motionGraphics": { "type": ["integer", "null"], "minimum": 0 },
        "visualDesign": { "type": ["integer", "null"], "minimum": 0 },
        "contentOnly": { "type": ["integer", "null"], "minimum": 0 }
      }
    },
    "outputTypes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["videoProduction", "motionGraphics", "visualDesign", "contentOnly"]
      }
    },
    "warnings": { "type": "array", "items": { "type": "string" } }
  }
}
