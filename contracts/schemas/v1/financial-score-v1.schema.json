{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://angle-rfp.dev/schemas/v1/financial-score-v1.schema.json",
  "title": "FinancialScoreV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "analysisId",
    "baseScore",
    "redFlagPenalty",
    "completenessPenalty",
    "finalScore",
    "recommendationBand",
    "factorBreakdown",
    "rationale"
  ],
  "properties": {
    "schemaVersion": { "type": "string", "const": "1.0.0" },
    "analysisId": { "type": "string", "format": "uuid" },
    "baseScore": { "type": "number", "minimum": 0, "maximum": 100 },
    "redFlagPenalty": { "type": "number", "minimum": 0, "maximum": 100 },
    "completenessPenalty": { "type": "number", "minimum": 0, "maximum": 100 },
    "finalScore": { "type": "number", "minimum": 0, "maximum": 100 },
    "recommendationBand": {
      "type": "string",
      "enum": ["EXCELLENT", "GOOD", "MODERATE", "LOW"]
    },
    "factorBreakdown": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["factor", "weight", "score", "contribution", "evidence", "status"],
        "properties": {
          "factor": { "type": "string" },
          "weight": { "type": "number", "minimum": 0, "maximum": 1 },
          "score": { "type": "number", "minimum": 0, "maximum": 100 },
          "contribution": { "type": "number", "minimum": 0, "maximum": 100 },
          "evidence": { "type": "array", "items": { "type": "string" } },
          "status": { "type": "string", "enum": ["scored", "na", "insufficient_evidence"] },
          "identified": { "type": "boolean" }
        }
      }
    },
    "rationale": { "type": "string", "minLength": 1 }
  }
}
